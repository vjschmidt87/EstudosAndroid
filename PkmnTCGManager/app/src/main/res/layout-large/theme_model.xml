<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:name="br.com.pokemon.vinicius.pkmntcgmanager.CollectionFragment"
        android:id="@+id/collection_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/card_list_fragment"
        android:name="br.com.pokemon.vinicius.pkmntcgmanager.CardFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <include layout="@layout/card_list" />

    </fragment>

</LinearLayout>